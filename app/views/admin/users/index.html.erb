<div class="page-header">  
  <h1>Admins</h1>
  <%= link_to new_admin_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Admin user
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Email</th>                        
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @admins) do |admin_user| %>
          <td><%= admin_user.email %></td>                        
          <td><%= link_to 'Edit', edit_admin_path(admin_user) %></td>
          <td>
            <% if @admins.count > 1 %>
              <%= link_to 'Destroy', admin_user, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </td>
      <% end %>
    </tbody>
  </table>
</div>
